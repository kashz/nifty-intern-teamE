.all_wrapper
  width 600px
  margin 20px auto 40px
  padding 10px 20px
  background-color $all_area_background
  border 3px solid color_border
  border-radius 20px
  text-align center
  h2
    text-align center
    font-size 30px
    font-weight bold
  .device_count
    font-size 24px
    padding 20px 0

@media screen and (max-width 800px)
  .all_wrapper
    width 95%
    margin 20px auto 20px
    h2
      font-size 20px
    .deviceCount
      font-size 20px
