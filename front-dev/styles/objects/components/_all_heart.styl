.all_heart
  display inline-block
  width 300px
  height 350px
  position relative
  &:before, &:after
    position absolute
    content ""
    width 100px
    height 150px
    top 110px
    left 50%
    background-color $heart_color
    border-radius 120px 120px 0 0
    transform rotate(-45deg)
    transform-origin 0 100%
  &:after
    transform rotate(45deg)
    transform-origin 100% 100%
    left 50px

