.heart
  display inline-block
  width 200px
  height 220px
  position relative
  &:before, &:after
    position absolute
    content ""
    width 50px
    height 80px
    top 70px
    left 50%
    background $heart_color
    border-radius 50px 50px 0 0
    transform rotate(-45deg)
    transform-origin 0 100%
  &:after
    transform rotate(45deg)
    transform-origin 100% 100%
    left 50px
